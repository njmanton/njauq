<section class="container" data-wk="{{ week }}" {{#if answers}}data-ans="true"{{/if}}>
  <h2 class="d-print-none">Quiz {{ week }} {{#if answers }}- Answers{{/if }} {{#if status.preview }} <span class="badge bg-warning">PREVIEW</span> {{/if }}</h2>
  
  <div class="print-heading d-none d-print-block">
    <table class="table">
      <tbody>
        <tr>
          <td style="width: 90%">Team Name: ________________________________</td>
          <td>Score: ______</td>
        </tr>
      </tbody>
    </table>
    <p>Identify the face etc. then sorted them into five linked groups of four, and give the reason for each link.</p>
  </div>
  {{#if answers }}
  <div class="grid">
    {{#each pictures }}
      {{>grid-item-answers this }}
    {{/each }}
  </div>
  {{ else }}
  <div class="grid">
    {{#each pictures }}
      {{>grid-item this }}
    {{/each }}
  </div>
  {{/if }}

  <!-- Modal -->
  <div class="modal fade" id="hilite" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"><span id="modal-id"></span>. <span id="modal-ct"></span></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <img id="modal-img" class="img-fluid img-thumbnail" src="" alt="">
          <p id="modal-ans"></p>
        </div>
      </div>
    </div>
  </div>

</section>
<section class="container {{#if answers }}d-print-none{{/if }}">
  <table class="table answer_sheet">
    <tbody>
      <tr>
        <td>A</td>
        <td>B</td>
      </tr>
      <tr>
        <td>C</td>
        <td>D</td>
      </tr>
      <tr>
        <td colspan="2">E <button style="margin-left: 90%" class="btn bg-info text-end d-print-none" onclick="window.print();">Print</button></td>
      </tr>
    </tbody>
  </table>
