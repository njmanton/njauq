<section class="container">
  <h1>Dashboard</h1>
  <table id="dashboard" class="table">
    <thead>
      <tr>
        <th scope="col" colspan="2">Week</th>
        <th scope="col">Actions</th>
        <th scope="col">Deadline</th>
        <th scope="col">Questions</th>
      </tr>
    </thead>
    <tbody>
      {{#each data }}
      <tr>
        <th scope="row">
          {{ id }}
        </th>
        <th>
          {{#if preview }} <span class="badge bg-warning">PREVIEW</span> {{/if }}
          {{#if live }} <span class="badge bg-primary">LIVE</span> {{/if }}
        </th>
        <td>
          <span><a title="View Quiz" href="/quiz/{{ id }}">{{>icons/eye }}</a></span>
          <span><a title="Edit Quiz" href="/quiz/{{ id }}/edit">{{>icons/pencil }}</a></span>
          <span><a title="View Answers" href="/quiz/{{ id }}/sheet">{{>icons/lightbulb }}</a></span>
        </td>
        <td>{{ format }}</td>
        <td>{{ questions }}</td>
      </tr>
      {{/each }}
    </tbody>
  </table>
</section>
